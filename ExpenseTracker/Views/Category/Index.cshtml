@model PaginatedResult<Category>


@section CustomStyles
{
    <link rel="stylesheet" href="@Url.Content("~/css/bsoverride.css")" />
}

@{
    ViewData["CurrentPage"] = "Index";
}

<div class="row p-0 d-flex justify-content-center m-auto" style="height: 100%; width: 100%">
    @if (TempData["Message"] != null)
    {
        <partial name="_PopUpSuccessModal" />
    }
   <div class="col p-2 pt-0 m-auto">
        <div class="container p-0 pt-0 mt-2" id="tableHolder">
            <div class="row w-100 m-auto p-0">
                <div class="col-6 p-0 mt-4">
                    <a class="btn bg-success border-outline" asp-action="Create" id="createBtn">
                        <span class="text-light h-100 w-100">
                            <i class="fa-solid fa-circle-plus me-2 border-0"></i> Add Category
                        </span>
                    </a>
                </div>
                <div class="col-6 p-0 mt-4">
                    <form asp-action="Index" method="get">
                        @Html.AntiForgeryToken()
                        <div class="input-group input-group-sm mb-2 w-75 float-end">
                            <input type="text"
                                   class="form-control rounded-0"
                                   aria-label="Small"
                                   placeholder="Search"
                                   aria-describedby="inputGroup-sizing-sm"
                                   name="s"
                                   value="@Model.SearchKeyword">
                            <div class="input-group-prepend bg-success">
                                <button class="btn btn-sm h-100 text-center bg-transparent"
                                        type="submit"
                                        id="inputGroup-sizing-sm">
                                    <i class="fa-solid fa-magnifying-glass text-light"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <table class="table table-sm table-hover table-dark mb-0 mt-0 bg-secondary">
                <thead class="bg-secondary">
                    <tr class="text-success fs-9">
                        <th></th>
                        <th class="text-start">Title</th>
                        <th>Type</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Result)
                    {
                        <tr class="fs-9">
                            <td class="text-center">@item.Icon</td>
                            <td class="text-start">@item.Title</td>
                            <td>@item.Type</td>
                            <td>
                                <div class="text-start">
                                    <a asp-action="Update" asp-route-id="@item.CategoryId" class="text-warning text-decoration-none me-1"
                                       data-bs-toggle="tooltip" 
                                       data-bs-placement="left"
                                       title="Update">
                                        <i class="fa-solid fa-gear" style="color: #74C0FC;"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="text-danger text-decoration-none ms-1"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="left"
                                       title="Delete">
                                        <i class="fa-solid fa-circle-xmark"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <nav class="pagination-outer" aria-label="Page navigation">
            <ul class="pagination p-3">
                <li class="page-item @(Model.Page == 1 ? "disabled" : "")" id="nextPrev">
                    <a class="page-link bg-transparent" asp-route-s="@Model.SearchKeyword" asp-route-p="@(Model.Page - 1)" aria-label="Previous">
                        <span aria-hidden="true" class="bg-transparent">« Previous</span>
                    </a>
                </li>
                @for (var pageNumber = 1; pageNumber <= Model.TotalCount; pageNumber++)
                {
                    if (pageNumber == Model.Page)
                    {
                        <li class="page-item">
                            <span class="page-link bg-transparent border-0 text-light text-xl">@pageNumber</span>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-route-s="@Model.SearchKeyword" asp-route-p="@pageNumber">
                                <span>@pageNumber</span>
                            </a>
                        </li>
                    }
                }
                <li class="page-item @(Model.Page == Model.TotalCount ? "disabled" : "")" id="nextPrev">
                    <a class="page-link bg-transparent" asp-route-s="@Model.SearchKeyword" asp-route-p="@(Model.Page + 1)" aria-label="Next">
                        <span aria-hidden="true" class="bg-transparent">Next »</span>
                    </a>
                </li>
            </ul>
        </nav>
   </div>
 </div>
@section CustomScripts {
    <script src="@Url.Content("~/js/ComponentUI.js")"></script>

}
     
 