@model TransactionViewModel



@section CustomStyles {

  

}

@{
    ViewData["CurrentPage"] = "Create";
}

<div class="row d-flex justify-content-center m-auto p-2" style="height: 100%; width: 100%">
    <div class="col-md-5 bg-dark main-container m-auto">
        <div class="text-center mt-2" id="title-holder">
            <h3 class="text-light">New Transaction</h3>
            <p class="text-light small">
                Create a new Transaction<br />
            </p>
        </div>
        <div>
            <form asp-action="Create" method="post" class="p-2 h-100">
                @Html.AntiForgeryToken()
                <div class="text-center"><span asp-validation-for="Transaction.Date" class="text-danger small"></span></div>
                <div class="mb-3">
                    <label asp-for="Transaction.Date"></label>
                    <input asp-for="Transaction.Date" type="date" class="form-control rounded-0" />
                </div>
                <div class="text-center"><span asp-validation-for="Transaction.CategoryId" class="text-danger small"></span></div>
                <label asp-for="Transaction.CategoryId"></label>
                <div class="input-group mb-1">
                    <select class="form-select custom-select rounded-0" onfocus="this.size=5" onblur="this.size=1" id="categoryId" asp-for="Transaction.CategoryId">
                            <option class="font-monospace" value="" disabled selected>Choose Category</option>
                        @foreach(var item in Model.Categories)
                        {
                            <option class="font-monospace" value="@item.CategoryId">@item.Title</option>
                        }
                    </select>
                </div>
                <div class="text-center"><span asp-validation-for="Transaction.Amount" class="text-danger small"></span></div>
                <div class="mb-1">
                    <label asp-for="Transaction.Amount"></label>
                    <input asp-for="Transaction.Amount" id="inputAmount" placeholder="Amount" min="0" type="number" class="form-control rounded-0" />
                </div>
                <div class="form-group">
                    <label asp-for="Transaction.Note"></label>
                    <div><span asp-validation-for="Transaction.Note" class="text-danger"></span></div>
                    <textarea asp-for="Transaction.Note" class="form-control rounded-0" rows="2"></textarea>
                </div>
                <div id="btnHolder" class="mt-3 pb-5">
                    <button class="btn w-100 rounded-0" type="submit">Create</button>
                    <a asp-action="Index" class="btn w-100 mt-3 btn-danger rounded-0">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section CustomScripts{
    <script src="@Url.Content("~/js/ComponentUI.js")"></script>
}

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}
