<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Libre+Franklin:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.syncfusion.com/ej2/26.1.35/bootstrap5-dark.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExpenseTracker.styles.css" asp-append-version="true" />
    @*<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0/dist/css/select2.min.css" rel="stylesheet" />*@
    <script src="https://kit.fontawesome.com/3c3b820551.js" crossorigin="anonymous"></script>
    @RenderSection("CustomStyles", required: false)
</head>
<body>

    @if (ViewData["CurrentPage"]?.ToString() == "Index" ||
         ViewData["CurrentPage"]?.ToString() == "Dashboard")
    {
        <div class="sidebar col-2 d-none d-md-block" id="side-bar">
            <partial name="_Sidebar" />
        </div>
    }
    <div id="main" class="col-12 col-md-10 p-auto @(ViewData["CurrentPage"]?.ToString() != "Index" && ViewData["CurrentPage"]?.ToString() != "Dashboard" ? "w-100" : "")">
         @*
        <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ExpenseTracker</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Category</a>
        </li>
        </ul>
        </div>
        </div>
        </nav>
        </header>
         *@
        <div class="container pt-5 p-0 p-md-2" id="mainContainer">
            <div class="burgerMenu p-auto h-100 w-100 @(ViewData["CurrentPage"]?.ToString() != "Index" && ViewData["CurrentPage"]?.ToString() != "Dashboard" ? "d-none" : "")"
                 id="burger-menu" style="z-index: 9999;">
                <button class="text-light d-md-none float-end" type="button" id="menu-toggle">
                    <span class="fs-4">
                        <i class="fa-solid fa-bars" id="icon"></i>
                    </span>
                </button>
            </div>
            <div class="row w-100 m-auto">
                <partial name="_BreadCrumb" />
            </div>
            <main role="main" class="">
                @RenderBody()
            </main>
        </div>
     </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("CustomScripts", required: false)
</body>
</html>
