@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "_LayoutNoSidebar";
}


@section CustomStyles{
    <link rel="stylesheet" href="@Url.Content("~/css/loginAndregister.css")" />
}


<div class="login-main-container">
    <div class="wrapper">
        <div id="f-password-close-btn">
            <a asp-action="Index" >
                <span>&times;</span>
            </a>
        </div>
        <div class="title" id="forgot-password-title">
            <h5 class="ps-3 text-light">Email</h5>
        </div>
        <div class="row formHolder">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger validation" role="alert"></div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <div id="inputHolder">
                    <i class="fa-solid fa-envelope icon"></i>
                    <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="Email" />
                </div>
                <div id="btnHolder">
                    <button type="submit" class="submit-button text-center">
                        Send
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
