@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section CustomStyles{

    <link rel="stylesheet" href="@Url.Content("~/css/loginAndregister.css")"/>
}


<div class="wrapper">
    <div class="title row mb-2">
        <h5 class="text-light">Track your everyday Expenses</h5>
        <p class="text-secondary">by login your account here</p>
    </div>
    <div class="row formHolder">
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
            <div id="inputHolder">
                <i class="fa-solid fa-envelope"></i>
                <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="Email" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <div id="inputHolder">
                <i class="fa-solid fa-lock"></i>
                <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="Password" />
            </div>
            <div>
              
